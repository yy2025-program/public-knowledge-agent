{
  "install": "pip3 install -r requirements.txt",
  "start": "python3 app.py",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "^__pycache__/"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "^\\.env$",
        "^app\\.py$"
      ]
    }
  }
}
